{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*.ts",
    "src",
  ],
  "esModuleInterop": true,
  "references": [ { "path": "src", "prepend": true } ], 
  "allowImportingTsExtensions": true
}